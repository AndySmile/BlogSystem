{% extends 'layout/base.html.twig' %}

{% block body %}
    <div class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse">
                    <span class="sr-only">Toggle Navigation</span>
                </button>
                
                <a href="" class="navbar-brand">{% block menu_title %}Blog System{% endblock %}</a>
            </div>
            
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Postmanager <span class="caret"></span>
                        </a>
                        
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ path('admin_post_editor') }}">New Post<a/>
                            </li>
                            
                            <li>
                                <a href="{{ path('admin_post_overview', {'pageIndex': 0}) }}">Overview</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="{{ path('logout') }}">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="container">
        {% for curr_message in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                <b>ERROR:</b> {{ curr_message }}
            </div> 
        {% endfor %}
        
        {% for curr_message in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                <b>SUCCESS:</b> {{ curr_message }}
            </div> 
        {% endfor %}
        
        {% block inner_body %}{% endblock %}
    </div>
{% endblock %}